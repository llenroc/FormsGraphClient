<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGraphClient.Views.FilesPage"
             Title="Files" BackgroundColor="Purple">
  <StackLayout Padding="0,25,0,0" BackgroundColor="White">
  <ListView x:Name="FilesList" HasUnevenRows="True" SeparatorVisibility="None">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Padding="5" Spacing="5">
            <Label Text="{Binding Name}" FontSize="Medium"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
    </StackLayout>
</ContentPage>